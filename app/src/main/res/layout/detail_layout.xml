<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="imageUrl"
            type="String" />
        <variable
            name="movieTitle"
            type="String" />
        <variable
            name="time"
            type="String" />
        <variable
            name="genre"
            type="String" />
        <variable
            name="synopsis"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="563dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/movie_dummy" />

            <ImageView
                android:id="@+id/image_mask"
                android:layout_width="match_parent"
                android:layout_height="563dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/detail_image_mask" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/watch_trailer_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/favorite_button"
                app:layout_constraintHorizontal_weight="1"
                app:backgroundTint="@color/bg_yellow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="7dp"
                android:text="@string/watch_button"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_text_regular"
                android:letterSpacing="0.01" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/favorite_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintStart_toEndOf="@id/watch_trailer_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:icon="@drawable/add"
                app:strokeColor="@color/white_12"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="7dp"
                android:text="@string/favorite_button"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpro_text_regular"
                android:letterSpacing="0.01"
                style="?attr/materialButtonOutlinedStyle" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/watch_trailer_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white_70"
                android:text="Adventure, Action, Comedy"
                android:layout_marginEnd="20dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/length"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/genre"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="14dp"
                android:textColor="@color/white_70"
                android:text="1h 30m"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/length"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="9dp"
                android:textColor="@color/white"
                android:text="Movie Title"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/sfpro_display_bold" />

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_mask"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/lipsum"
                android:textColor="@color/white_70" />

            <TextView
                android:id="@+id/text_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TitleTextHome"
                app:layout_constraintTop_toBottomOf="@id/synopsis"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="32dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_cast"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>